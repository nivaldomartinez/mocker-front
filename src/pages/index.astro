---
import Layout from '../layouts/Layout.astro';
import JSONEditor from '../components/JSONEditor'
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Mocker</h1>
		<JSONEditor client:only />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
